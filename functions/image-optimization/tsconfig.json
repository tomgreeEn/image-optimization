{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./**/*.ts",
    "../../config/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
} 