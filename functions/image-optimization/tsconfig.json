{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true
  },
  "include": [
    "./**/*.ts",
    "./config/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
} 